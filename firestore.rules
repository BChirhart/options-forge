rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Content is now stored in the codebase (src/content/curriculum.json), not Firestore
    // The old content collections (levels, courses, lessons) are no longer used
    // Deny all access by default - Firestore is reserved for future features (e.g., user progress tracking)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

